# ── Database ──────────────────────────────────────────────
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=fastfood
DB_USER=root
DB_PASS=

# ── JWT Auth ───────────────────────────────────────────────
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change_me_to_a_long_random_string_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ── App ────────────────────────────────────────────────────
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:5500,http://127.0.0.1:5500
